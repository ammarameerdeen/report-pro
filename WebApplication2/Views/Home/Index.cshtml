.disabled{
    pointer-events : none;
}

.btn-report{
    background-color : maroon !important;
    color : white;
    padding : 15px;
    margin : 15px ;
    display : inline;
    align-content : center;
    text-decoration : none;
    float : left;
}

.btn-reset{
    background-color: grey;
    padding : 15px;
    margin : 15px ;
    display : inline;
    align-content : center;
    float : right;
}

.btn-column-filter{
    background-color: grey;
    padding : 15px;
    margin : 15px ;
    display : inline;
    align-content : center;
    float : left;
}

.row-filter{
    border : none;
    border-bottom : 2px solid black !important;
}
.report-heading{
    font-size : 24px;
    align-content : center;
}

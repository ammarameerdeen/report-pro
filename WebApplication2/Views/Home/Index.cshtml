<div class="report-container">
    <table id="products-table">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Quantity</th>
            </tr>
        </tfoot>
    </table>
</div>


@section scripts{
    <script>

        $("#products-table").reportGenerator(
            {
                "bLengthChange": false,
                "columns": [
                        { "data": "ProductId" },
                        { "data": "ProductName" },
                        { "data": "StocksQuantity" },
                ],
                "reportTitle" : "My Report"
            }
            );
    </script>
}
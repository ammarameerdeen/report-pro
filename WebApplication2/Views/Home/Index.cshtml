<style>
        .report-container {
        width: 100%;
        overflow-y: auto;
    }

    .report-table {
        width: 100%;
        padding: 10px;
    }
.clear {
    clear: both;
}



.custom-text-box{
    background-color: #eee !important;
}
 li.active{
     background-color : black;
 }

.selected {
    background-color : grey !important ;
}


.menu-open {

}
.paginate_button{
        display: inline-block;
    padding: 10px;
    background: rgba(69, 90, 100, 0.74);
    color: white;
    border-radius: 2px;
    margin: 2px;
    box-shadow: 0 1px 1px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
    -webkit-user-select: none; /* Chrome/Safari */ 
